<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:background="@drawable/setting_image"
        />

    <TextView
        android:id="@+id/te_textview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="15sp"
        android:text="현재 로그인 된 계정 "
        android:layout_marginBottom="10dp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/takeapicture"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/bt_delect"
        android:background="@drawable/image_add2"
        android:text="" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_red"
        android:layout_gravity="center"
        android:scaleType="fitXY" />

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:background="@drawable/image_add_2"
        android:layout_gravity="center"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/bt_logut"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=""
        android:layout_below="@+id/te_textview"
        android:background="@drawable/logout_image"
        />

    <Button
        android:id="@+id/bt_delect"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/bt_logut"
        android:text=""
        android:background="@drawable/delete_id"
        />


</LinearLayout>


</LinearLayout>

